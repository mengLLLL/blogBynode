extends ../layout

block content
	.container.setting-container
		if errors
			- console.log('errors',errors)
			div.flash #{errors}
		.setting-title
			h2
				i.fa.fa-cogs &nbsp;设置
		.setting-tabs
			h2
				span
					a.active(rel='user-form') 个人资料
					b ·
					a(rel='upload-form') 上传头像
		.row.update-user-msg
			form.form-horizontal(method='post',action='/update',name='user',role='form',class='update-msg',id='user-form')
				div.m-form-group
					label 用户名
					input(type='text', name='user[username]', value='#{user.username}')
				div.m-form-group
					label 密码
					input(type='password', name='user[password]', value='#{user.password}')
				div.m-form-group
					button.btn.btn-default#update(type='submit') 保存更改
		.update-user-avatar
			form(method='post', action='/upload', name='upload', enctype='multipart/form-data',id='upload-form',class='update-avatar')
				div.show-avatar-box
					label 头像
					a
						img(src="#{avatar}")
				div
					input#picture(type='file', name='avatar')
				div.upload-btn-box
					//button.btn.btn-default#triggerUpload 上传头像
					button.btn.btn-default#upload(type='submit') 上传头像
	script(src="script/detail.js",type="text/javascript")
	script(src="script/index.js", type="text/javascript")