extends ../layout

block content
	.container.setting-container
		.setting-title
			h2
				i.fa.fa-cogs &nbsp;设置
		.row.update-user-msg
			form.form-horizontal(method='post',action='/update',name='user',role='form',class='update-msg')
				.form-group
					label.col-sm-2 用户名
					.col-sm-5
						input.form-control(type='text', name='user[username]', value='#{user.username}')
				.form-group
					label.col-sm-2 密码
					.col-sm-5
						input.form-control(type='text', name='user[password]', value='#{user.password}')
				.form-group
					.col-sm-10
						button.btn.btn-default#update(type='submit') 保存更改
		.row.update-user-avatar
			form.form-horizontal(method='post', action='/upload', name='upload', enctype='multipart/form-data',class='update-avatar')
				.form-group
					label.col-sm-2 上传头像
					.col-sm-5
						input.form-control#picture(type='file', name='avatar')
				.form-group
					.col-sm-10
						button.btn.btn-default#upload(type='submit') 上传
	script(src="script/detail.js",type="text/javascript")
	script(src="script/index.js", type="text/javascript")